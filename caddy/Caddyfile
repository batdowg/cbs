cbs.ktapps.net {
    encode zstd gzip
    root * /srv

    # 1) Serve certificate files straight off disk
    handle /certificates/* {
        file_server
    }

    # 2) Other true-static
    handle_path /resources/* { file_server }
    handle_path /badges/*    { file_server }

    # 3) Health endpoint to Flask
    @health path /healthz
    handle @health {
        reverse_proxy app:8000
    }

    # 4) Everything else -> Flask
    handle {
        reverse_proxy app:8000
    }
}
