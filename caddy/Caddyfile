cbs.ktapps.net {
    encode zstd gzip
    root * /srv

    # Only these are truly static:
    handle_path /resources/* {
        file_server
    }
    handle_path /badges/* {
        file_server
    }

    # Everything else goes to Flask (this includes /certificates/new)
    handle {
        reverse_proxy app:8000
    }
}
