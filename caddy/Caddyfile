cbs.ktapps.net {
    encode zstd gzip
    root * /srv

    # Serve certificate PDFs directly from disk:
    # /certificates/<year>/<session-id>/<filename>.pdf
    @certpdfs path /certificates/2*/*/*
    handle @certpdfs {
        file_server
    }

    # Other true-static assets
    handle_path /resources/* { file_server }
    handle_path /badges/*    { file_server }

    # Everything else (incl. /certificates/new) -> Flask
    handle {
        reverse_proxy app:8000
    }
}
